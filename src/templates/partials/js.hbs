<script>
      function toggleAllDetails(node) {
        const expAll = "Expand all";
        const colAll = "Collapse all"
        const rows = document.querySelectorAll("tr.details");
        let cl;
    
        if (node.innerHTML === expAll) {
          node.innerHTML = colAll;
          cl = "remove";
        } else {
          node.innerHTML = expAll;
          cl = "add";
        }
  
        for (var x = 0; x < rows.length; x++) {
          let row = rows[x];
          row.classList[cl]("hidden");
        }
      }
    
      function toggleDetails(node) {
        const parentRow = node.parentNode.parentNode;
        const detailsRow = parentRow.nextSibling;
        detailsRow.classList.toggle("hidden");
      }
</script>